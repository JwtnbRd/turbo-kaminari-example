<table class="posts-table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td class="status-cell"
            style="
            <% if post.confirmed? %>
              background-color: #d4edda; color: #155724;
            <% elsif post.unconfirmed? %>
              background-color: #fff3cd; color: #856404;
            <% else %>
              background-color: #f8d7da; color: #721c24;
            <% end %>
            font-weight: bold; text-align: center;">
          <% if post.confirmed? %>
            ‚úÖ confirmed
          <% elsif post.unconfirmed? %>
            üìÑ unconfirmed
          <% else %>
            ‚ùì <%= post.status %>
          <% end %>
        </td>
        <td style="text-align: center;">
          <% if post.confirmed? %>
            <!-- Á¢∫Ë™çÊ∏à„Åø„ÅÆÂ†¥Âêà„ÅØUnconfirm„Éú„Çø„É≥Ë°®Á§∫ -->
            <%= link_to "üîÑ Unconfirm", unconfirm_post_path(post, page: params[:page]),
                  data: {
                    turbo_method: :patch,
                    turbo_stream: true
                  },
                  class: "action-button btn-unconfirm" %>
          <% elsif post.unconfirmed? %>
            <!-- Êú™Á¢∫Ë™ç„ÅÆÂ†¥Âêà„ÅØConfirm„Éú„Çø„É≥Ë°®Á§∫ -->
            <%= link_to "‚úÖ Confirm", confirm_post_path(post, page: params[:page]),
                  data: {
                    turbo_method: :patch,
                    turbo_stream: true
                  },
                  class: "action-button btn-confirm" %>
          <% else %>
            <!-- „Åù„ÅÆ‰ªñ„ÅÆÁä∂ÊÖã„ÅÆÂ†¥ÂêàÔºàÈÄöÂ∏∏„ÅØ„Å™„ÅÑ„ÅØ„ÅöÔºâ -->
            <span style="color: #6c757d;">Unknown Status</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>